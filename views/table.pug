table(id="table1")
    tr
        th
        th Название
        th Автор
        th Год выпуска
        th Наличие
        th Дата возврата

    for item in books
        tr
            th
                if item.in_library === "нет"
                    button(class = "delete" disabled = true) 
                        i(class = "fa fa-trash")
                else
                    button(class = "delete", id = item.id,  onclick = "del(this)")
                        i(class = "fa fa-trash")
            th
                a(href="/books/"+item.id style = "text-decoration: underline") #{item.name}
            th #{item.au}
            th #{item.date}
            th #{item.in_library}
            th #{item.return_date}            